<Window x:Class="MedicalLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход" Height="250" Width="300">

    <StackPanel Margin="20">
        <TextBlock Text="Логин:"/>
        <TextBox x:Name="txtLogin" Height="25" Text="admin"/>

        <TextBlock Text="Пароль:" Margin="0,10,0,0"/>
        <PasswordBox x:Name="txtPassword" Height="25" Password="admin"/>

        <Button Content="Войти" Height="30" Margin="0,20,0,0" Click="BtnLogin_Click"/>

        <TextBlock Text="admin / admin" 
                   Margin="0,10,0,0" 
                   HorizontalAlignment="Center" 
                   Foreground="Gray"/>
    </StackPanel>
</Window>