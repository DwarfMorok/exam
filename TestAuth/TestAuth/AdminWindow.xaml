<Window x:Class="MedicalLab.AdminWindow"
        Title="Админ" Height="500" Width="700"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="Blue" Padding="10">
            <TextBlock Text="АДМИНИСТРАТОР" Foreground="White" FontSize="16"/>
        </Border>

        <!-- Содержимое -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- Вкладка 1: Сотрудники -->
            <TabItem Header="Сотрудники">
                <StackPanel>
                    <DataGrid x:Name="gridEmployees" Height="300" Margin="10"/>
                    <Button Content="Обновить" Width="100" Margin="10" Click="RefreshEmployees"/>
                </StackPanel>
            </TabItem>

            <!-- Вкладка 2: Заказы -->
            <TabItem Header="Заказы">
                <StackPanel>
                    <DataGrid x:Name="gridOrders" Height="300" Margin="10"/>
                    <Button Content="Обновить" Width="100" Margin="10" Click="RefreshOrders"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>